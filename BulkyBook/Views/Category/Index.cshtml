@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification"/>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Category Name</h1>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary "> <i class="bi bi-plus-circle"></i>&nbsp; Create Category</a>
        </div>

    </div>
</div>

<table class="table table-bordered table-striped width:100%">

    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"> Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

