@model Category

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
   <div class="border p-4 mt-5">
        <div>
        <h1>Delete Category</h1>
    </div>

    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        <span asp-validation-for="DisplayOrder"></span>
    </div>
    
    <button type="submit" class="btn btn-primary" style="width:120px">Delete</button>
    <a class="btn btn-info" asp-controller="Category" asp-action="Index">Back To List</a>
   </div>
</form>

